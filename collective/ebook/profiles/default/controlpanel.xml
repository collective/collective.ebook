<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.ebook"
    purge="False">

    <configlet
        title="PDF e-book"
        action_id="ebook"
        appId="collective.ebook"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@ebook-controlpanel"
        icon_expr="string:$portal_url/pdf.png"
        visible="True"
        i18n:attributes="title">
      <permission>Manage portal</permission>
    </configlet>

</object>
